{
    "name": "martines/differences-generator",
    "description": "Utility for comparing two config files and determining their differences",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandr Petrov",
            "email": "yarncat@yandex.ru"
        }
    ],
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files": [
            "src/Gendiff.php",
            "src/Parsers.php",
            "src/Formatters/Formatter.php",
            "src/Formatters/Renders.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Json.php"
        ]
    },
    "require": {
        "docopt/docopt": "^1.0",
